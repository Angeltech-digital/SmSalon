# ==============================================
# Environment Configuration for SmSalon
# ==============================================
# COPY THIS FILE TO .env AND FILL IN VALUES
# ==============================================

# ---------------------------------------------------------
# SECURITY - IMPORTANT: Change these in production!
# ---------------------------------------------------------
SECRET_KEY=django-insecure-generate-a-secure-key-here

# ---------------------------------------------------------
# DEBUG MODE - Set to False in production
# ---------------------------------------------------------
DEBUG=False

# ---------------------------------------------------------
# ALLOWED HOSTS - Add your domain(s)
# ---------------------------------------------------------
ALLOWED_HOSTS=plankton-app-q4rym.ondigitalocean.app,localhost,127.0.0.1

# ---------------------------------------------------------
# DATABASE - PostgreSQL connection string
# ---------------------------------------------------------
# Get this from DigitalOcean: Databases → Your Database → Connection Details
DATABASE_URL=postgresql://doadmin:AVNS_xxxxx@db-postgresql-xxxxx-do-user-xxxxx-0.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# ---------------------------------------------------------
# EMAIL CONFIGURATION
# ---------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@smsalon.com

# ---------------------------------------------------------
# CORS - Allowed origins for frontend
# ---------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://plankton-app-q4rym.ondigitalocean.app,http://localhost:3000

# ---------------------------------------------------------
# CELERY (Optional - for background tasks)
# ---------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0

# ---------------------------------------------------------
# STATIC FILES
# ---------------------------------------------------------
DISABLE_COLLECTSTATIC=1

